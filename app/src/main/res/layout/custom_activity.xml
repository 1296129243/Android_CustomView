<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.example.CustonTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        custom:right_button_drawable="@mipmap/img2"
        custom:title_background_color="@color/green"
        custom:title_text="标题1"
        ></com.example.CustonTitleBar>

    <com.example.CustonTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        custom:right_button_visible="false"
        custom:title_background_color="@color/green"
        custom:title_text="标题2"
        ></com.example.CustonTitleBar>

    <com.example.CustonTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        custom:left_button_text="左边"
        custom:right_button_text="右边"
        custom:title_background_color="@color/red"
        custom:title_text="标题3"
        ></com.example.CustonTitleBar>

    <com.example.CustonTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        custom:left_button_text="左边"
        custom:right_button_drawable="@mipmap/img2"
        custom:title_background_color="@color/red"
        custom:title_text="标题4"
        ></com.example.CustonTitleBar>
    <com.example.CustonTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        custom:left_button_text="左边"
        custom:left_button_text_color="@color/red"
        custom:right_button_drawable="@mipmap/img2"
        custom:title_background_color="@color/blue"
        custom:title_text="标题5"
        ></com.example.CustonTitleBar>
    <com.example.CustonTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        custom:left_button_text="左边"
        custom:left_button_text_color="@color/red"
        custom:right_button_drawable="@mipmap/img2"
        custom:title_background_color="@color/blue"
        custom:title_text="标题6"
        custom:title_text_color="@color/black"
        ></com.example.CustonTitleBar>

</LinearLayout>
